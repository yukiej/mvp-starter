{
  "manifest_version": 2,
  "name": "Substitute Ingredient Finder",
  "version": "1.0",

  "description": "Personalize a recipe with ingredients you have on hand!",

  "icons": {
    "128": "logo-small.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Find substitute ingredients"
  },
  "permissions": [
    "http://*/*", "https://*/*"
  ]
}